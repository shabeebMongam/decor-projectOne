                    <section class="section">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <h4 class="card-title">Ordered On : <%=
                                        orderToDisplay.orderedDate.toLocaleDateString()%>
                                        -- <%= orderToDisplay.orderedDate.toLocaleTimeString('en-US') %>
                                </h4>

                                <div class="w-25">

                                    <form action="/updateOrderStatus/<%=userIdOfTheUser%>/<%=orderToDisplay._id %> "
                                        method="post" class="d-flex">
                                        <select id="cars" class="border border-rounded form-select" name="orderStatus">
                                            <option value="<%=orderStatusToDisplay%>">
                                                <%=orderStatusToDisplay%>
                                            </option>

                                            <% if(orderStatusToDisplay==='Packed' ){%>
                                                <option value="Shipped">Shipped</option>
                                                <option value="Delivered">Delivered</option>
                                                <option value="Delivered">Pending</option>
                                                <% }else if(orderStatusToDisplay==='Shipped' ){%>
                                                    <option value="Packed">Packed</option>
                                                    <option value="Delivered">Delivered</option>
                                                    <option value="Delivered">Pending</option>

                                                    <% }else if(orderStatusToDisplay==='Delivered' ){%>
                                                        <option value="Packed">Packed</option>
                                                        <option value="Shipped">Shipped</option>
                                                        <option value="Delivered">Pending</option>

                                                        <% }else if(orderStatusToDisplay==='Pending' ){ %>
                                                            <option value="Packed">Packed</option>
                                                            <option value="Shipped">Shipped</option>
                                                            <option value="Delivered">Delivered</option>
                                                            <% } %>


                                        </select>
                                        <button class="btn border w-100 ms-2" type="submit">Update Status</button>
                                    </form>
                                    <!-- <h5> <label for="">Status</label> </h5> -->

                                </div>

                            </div>
                            <div class="card-body">
                                <p>
                                </p>
                                <!-- <p><%=orderToDisplay.status %></p> -->
                                <% for(product of orderToDisplay.products){ %>
                                    <div class="d-flex   my-2">
                                        <div>
                                            <img src="/commonStatic/productImages/<%=product.productImages[0]  %> "
                                                alt="" style="width: 200px">
                                        </div>

                                        <div class="ms-4 my-auto">
                                            <h4> Name : <%=product.productName %>
                                            </h4>
                                            <h6>Quantity : <%=product.productQuantity %>
                                            </h6>
                                            <h6>Price : <%=product.productPrice %>
                                            </h6>

                                        </div>




                                    </div>
                                    <% } %>

                                        <div class="text-end">
                                            <h6>
