<%- include('../userIncludes/header') %>
    </head>

    <body>
        <%- include('../userIncludes/nav') %>

            <form action="/editProfile" method="post">

                <div class="" style="height: 70vh ;">
                    <div class="container d-flex justify-content-center my-5">
                        <div class="col-lg-8 ">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Name</p>
                                        </div>
                                        <div class="col-sm-9 ">
                                            <input type="text" class="border-0" name="name" value="<%=userData.name%>">
                                            <p class="text-muted mb-0"></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Email</p>
                                        </div>
                                       <%    if(userData.email){ %>
                                            <div class="col-sm-9 ">
                                                <input type="email" class="border-0 w-75" name="email" value="<%=userData.email%>" required >
                                            </div>
                                       <%    }else{ %>
                                            <div class="col-sm-9 border border-dark">
                                                <input type="text" class="border-0 w-75" name="email" placeholder="No Email"  required>
                                            </div>
                                       <%    } %>
                                    </div>
                                    <hr>

                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Mobile Number</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <input type="text" class="border-0" name="number" value="<%=userData.mobileNumber%>">

                                            <p class="text-muted mb-0"></p>
                                        </div>
                                    </div>
                                    <!-- <hr>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                              </div>
                              <div class="col-sm-9">
                                <p class="text-muted mb-0">Bay Area, San Francisco, CA</p>
                              </div>
                            </div> -->
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <!-- <a href="" class="btn border border-dark "></a> -->
                                <button class="btn border border-dark " type="submit">Submit</button>
                            </div>
                        </div>
                    </div>

                </div>
            </form>






            <%- include('../userIncludes/footer') %>


                <%- include('../userIncludes/bodyEnd') %>