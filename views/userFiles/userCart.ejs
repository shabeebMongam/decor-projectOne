                <script>
                    function changeQuantity(userId, productId, count, total) {
                        let formDataTosend = document.getElementById("formTotalPrice")
                       
                        let totalPrice = document.getElementById("allTotal")
                        let quantity = document.getElementById(productId + '_qty')
                        // alert(quantity)
                        console.log(quantity.innerHTML);
                        console.log(typeof(quantity.innerHTML));
                        let tPrice = document.getElementById(productId + '_total')
                        let tPriceBeforeIncrement = tPrice.innerHTML

                        if ( parseInt(quantity.innerHTML) === 2 && count == -1 ){
                           console.log( document.getElementById("negativeBtn"));
                           
                           document.getElementById("negativeBtn" ).setAttribute("style","visibility: hidden")
                           
                        //    document.getElementById("negativeBtn").setAttribute("disabled" , true)
                        }else{
                            document.getElementById("negativeBtn").setAttribute("style","visibility: block")
                            // document.getElementById("negativeBtn").setAttribute("disabled" , false)
                        }
                     







                        $.ajax({
                            url: '/changeProductQuantity',
                            data: {
                                userId: userId,
                                productId: productId,
                                count: count
                            },
                            method: 'post',
                            success: (response) => {
                                // alert(response.productQuantity)
                                console.log(response);
                                quantity.innerHTML = response.productQuantity
                                tPrice.innerHTML = response.productPrice * response.productQuantity

                                tPriceAfterIncrement = tPrice.innerHTML

                                // console.log(tPriceAfterIncrement);

                                let differenceOfPrice = (parseInt(tPriceAfterIncrement) - parseInt(tPriceBeforeIncrement))
                                // console.log(typeof(differenceOfPrice));
                                let allTotalCart = parseInt(totalPrice.innerHTML) + (differenceOfPrice)
                                totalPrice.innerHTML = allTotalCart
                                formDataTosend.setAttribute("value", allTotalCart)
                                // console.log(formDataTosend);
                                // console.log(typeof(totalPrice));
                                // console.log(typeof(totalPrice.innerHTML));
                            }

                        })
                    }
                </script>



