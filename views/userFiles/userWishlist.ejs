<%- include('../userIncludes/header') %>
    </head>

    <body>
        <%- include('../userIncludes/nav') %>

            <section class="h-100 gradient-custom " style="min-height: 90vh;">
                <div class="container py-5">
                    <div class="row d-flex justify-content-center my-4">
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header py-3 mb-3">
                                    <h5 class="mb-0">Wihlist</h5>
                                </div>





                                <% let totalPrice=0 %>

                                    <% for(product of productsInWishlist){ %>
                                        <div class="card rounded-3 mb-4 mx-3">
                                            <div class="card-body p-4">
                                                <div class="row d-flex justify-content-between align-items-center">
                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                        <img src="/commonStatic/productImages/<%=product.productImages[0]%>"
                                                            class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                        <p class="lead fw-normal mb-2">
                                                            <%=product.productName%>
                                                        </p>
                                                        <p><span class="text-muted">Price: </span>
                                                            <%=product.productPrice%> <span></span>
                                                        </p>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <% if(product.productQuantity> 0){ %>
                                                            <p>In stock</p>
                                                           
                                                            <% }else{ %>
                                                                <p>Out of stock</p>
                                                                <% } %> 
                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                            <a href="/addToCartFromWishlist/<%=product._id%>"
                                                                class="text-success ">Add To Cart</a>
                                                    </div>
                                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                        <a href="/removeItemFromWishlist/<%=product._id%>"
                                                            class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <% } %>














                            </div>

                        </div>

                    </div>
                </div>
            </section>






            <%- include('../userIncludes/footer') %>


                <%- include('../userIncludes/bodyEnd') %>